    </Window.Background>
    <Image HorizontalAlignment="Center" Height="477" VerticalAlignment="Top" Width="892" Source="Images/Fear-in-Rome_810_500_55_s_c1.jpg" Margin="0,21,0,0" Stretch="Fill"/>
